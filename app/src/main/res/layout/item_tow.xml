<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:paddingBottom="5dp"
        android:id="@+id/rlContent"
        android:background="@drawable/shape_white">

        <LinearLayout
            android:id="@+id/llVs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--   fresco:roundAsCircle="true" 圆形-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivContent01"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                fresco:progressBarImage="@drawable/load_err"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundedCornerRadius="9dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:textSize="25sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivContent02"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_gravity="center"
                fresco:progressBarImage="@drawable/load_err"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundedCornerRadius="9dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvData"
            android:layout_below="@+id/llVs"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="2"
            android:ellipsize="end"
            android:paddingHorizontal="5dp"
            android:textColor="@color/textTitle"
            android:text="【亡灵序曲】钢琴对决，潇月代表和玲珑代表谁才是王者？" />

        <LinearLayout
            android:layout_below="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_above="@+id/tvData"
                android:layout_width="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp"
                android:layout_height="15dp"
                android:src="@drawable/play"/>

            <TextView
                android:id="@+id/tvPlayNum"
                android:layout_toRightOf="@+id/imgPlay"
                android:layout_above="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#bfbfbf"
                android:text="156"/>


            <ImageView
                android:id="@+id/imgComment"
                android:layout_toRightOf="@+id/tvPlayNum"
                android:layout_above="@+id/tvData"
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="15dp"
                android:src="@drawable/comment"/>

            <TextView
                android:layout_toRightOf="@+id/imgComment"
                android:layout_above="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#bfbfbf"
                android:text="156"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_939393"
                android:textSize="11sp"
                android:text="吉他"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/color_939393"
                android:textSize="11sp"
                android:text="○"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_939393"
                android:textSize="11sp"
                android:text="solo"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
